---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import MainNavigation from "../components/MainNavigation.astro";

const title = "Home";
---

<BaseLayout title={title}>
  <div class="flex min-h-screen flex-col">
    <Header />

    <main class="container mx-auto max-w-6xl flex-1 px-4 py-8">
      <h1 class="text-primary mb-6 text-3xl font-bold">Welcome to Maten</h1>

      <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
        <div class="rounded-lg border border-gray-100 bg-white p-6 shadow-sm">
          <h2 class="text-primary mb-4 text-xl font-semibold">
            Recipe Library
          </h2>
          <p class="text-secondary mb-4">
            Browse and manage your favorite recipes.
          </p>
          <a href="/recipes" class="text-accent font-medium hover:underline"
            >View Recipes</a
          >
        </div>

        <div class="rounded-lg border border-gray-100 bg-white p-6 shadow-sm">
          <h2 class="text-primary mb-4 text-xl font-semibold">
            Dinner Planning
          </h2>
          <p class="text-secondary mb-4">Plan your weekly meals with ease.</p>
          <a href="/plan" class="text-accent font-medium hover:underline"
            >Plan Meals</a
          >
        </div>

        <div class="rounded-lg border border-gray-100 bg-white p-6 shadow-sm">
          <h2 class="text-primary mb-4 text-xl font-semibold">Shopping List</h2>
          <p class="text-secondary mb-4">
            Generate shopping lists from your meal plans.
          </p>
          <a href="/shopping" class="text-accent font-medium hover:underline"
            >View Shopping List</a
          >
        </div>
      </div>
    </main>

    <MainNavigation />
  </div>
</BaseLayout>
