---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import MainNavigation from "../components/MainNavigation.astro";

const title = "Page Not Found";
---

<BaseLayout title={title}>
  <div class="flex min-h-screen flex-col">
    <Header />

    <main class="container mx-auto max-w-6xl flex-1 px-4 py-8">
      <div class="text-center py-16">
        <h1 class="text-6xl font-bold text-primary mb-4">404</h1>
        <h2 class="text-2xl font-semibold text-secondary mb-6">Page Not Found</h2>
        <p class="text-lg text-secondary mb-8 max-w-md mx-auto">
          The page you're looking for doesn't exist or has been moved.
        </p>
        <a 
          href="/"
          class="inline-block px-6 py-3 bg-accent text-white rounded-lg hover:bg-opacity-90 transition-colors font-medium"
        >
          Return to Home
        </a>
      </div>
    </main>

    <MainNavigation />
  </div>
</BaseLayout>