---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import MainNavigation from "../components/MainNavigation.astro";

const title = "Page Not Found";
---

<BaseLayout title={title}>
  <div class="flex min-h-screen flex-col">
    <Header />

    <main class="container mx-auto max-w-6xl flex-1 px-4 py-8">
      <div class="py-16 text-center">
        <h1 class="text-primary mb-4 text-6xl font-bold">404</h1>
        <h2 class="text-secondary mb-6 text-2xl font-semibold">
          Page Not Found
        </h2>
        <p class="text-secondary mx-auto mb-8 max-w-md text-lg">
          The page you're looking for doesn't exist or has been moved.
        </p>
        <a
          href="/"
          class="bg-accent hover:bg-opacity-90 inline-block rounded-lg px-6 py-3 font-medium text-white transition-colors"
        >
          Return to Home
        </a>
      </div>
    </main>

    <MainNavigation />
  </div>
</BaseLayout>
